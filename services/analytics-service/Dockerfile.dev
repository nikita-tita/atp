# Development Dockerfile for Analytics Service
FROM python:3.11-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    gcc \
    musl-dev \
    postgresql-dev \
    libffi-dev \
    curl

# Create non-root user
RUN addgroup -g 1001 -S python && \
    adduser -S python -u 1001

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p /var/log/analytics-service && \
    chown -R python:python /var/log/analytics-service

# Change ownership
RUN chown -R python:python /app

# Switch to non-root user
USER python

# Expose port
EXPOSE 3004

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3004/health || exit 1

# Start the application in development mode
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "3004", "--reload"] 