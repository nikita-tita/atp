# Development Dockerfile for Payment Service
FROM golang:1.21-alpine AS development

# Set working directory
WORKDIR /app

# Install git and other dependencies
RUN apk add --no-cache git ca-certificates

# Create non-root user
RUN addgroup -g 1001 -S golang && \
    adduser -S golang -u 1001 -G golang

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o payment-service ./cmd/main.go

# Create logs directory
RUN mkdir -p /var/log/payment-service && \
    chown -R golang:golang /var/log/payment-service

# Change ownership
RUN chown -R golang:golang /app

# Switch to non-root user
USER golang

# Expose port
EXPOSE 3006

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3006/health || exit 1

# Start the application in development mode with hot reload
CMD ["air", "-c", ".air.toml"] 